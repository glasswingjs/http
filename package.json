{
  "name": "@glasswing/http",
  "version": "0.0.1",
  "description": "GlassWingJs HTTP Definitions Package",
  "main": "dist/commonjs/index.js",
  "scripts": {
    "build": "rollup -c --environment NODE_ENV:production",
    "clean": "cross-env rimraf .nyc_output .rollupcache dist",
    "lint": "tslint -c tslint.json 'src/**/*.ts'",
    "prebuild": "cross-env rimraf dist",
    "prepare-for-dev": "node .scripts/prepare-for-dev.js",
    "pretest": "cross-env rimraf dist",
    "prettier": "prettier",
    "prettier:check": "npm run prettier -- --list-different \"src/**/*.{ts,tsx}\" && npm run prettier -- --list-different \"test/**/*.{ts,tsx}\"",
    "prettier:write": "npm run prettier -- --write \"src/**/*.{ts,tsx}\" && npm run prettier -- --write \"test/**/*.{ts,tsx}\"",
    "test": "nyc --extension .ts mocha --forbid-only \"test/**/*.test.ts\"",
    "test:html": "nyc --reporter html --extension .ts mocha --forbid-only \"test/**/*.test.ts\"",
    "test:watch": "nodemon --exec \"npm run test\"",
    "git-hook:pre-commit": "npm run prettier:write && npm run lint && npm run test && npm run build",
    "serve": "ts-node src/index.ts",
    "serve:watch": "nodemon --exec \"npm run serve\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/glasswingjs/http.git"
  },
  "author": "Dragos Cirjan",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/glasswingjs/http/issues"
  },
  "homepage": "https://github.com/glasswingjs/http",
  "devDependencies": {
    "@types/chai": "^4.2.7",
    "@types/mocha": "^5.2.7",
    "@types/node": "^12.12.17",
    "@types/set-cookie-parser": "0.0.6",
    "@types/yaml": "^1.2.0",
    "chai": "^4.2.0",
    "cross-env": "^6.0.3",
    "dts-bundle-generator": "^3.3.1",
    "mocha": "^6.2.2",
    "node-fetch": "^3.1.1",
    "nodemon": "^2.0.2",
    "nyc": "^14.1.1",
    "prettier": "^1.19.1",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.0",
    "rollup": "^1.27.13",
    "rollup-plugin-dts": "^1.1.13",
    "rollup-plugin-typescript2": "^0.25.3",
    "ts-node": "^8.5.4",
    "tslint": "^5.20.1",
    "tsyringe": "^4.0.1",
    "typescript": "^3.7.3",
    "typings": "^2.1.1",
    "yorkie": "^2.0.0"
  },
  "types": "dist/index.d.ts",
  "dependencies": {
    "@glasswing/common": "github:glasswingjs/common#5bb3ee9",
    "set-cookie-parser": "^2.4.1",
    "yaml": "^1.7.2"
  },
  "gitHooks": {
    "pre-commit": "npm run git-hook:pre-commit && git add ."
  }
}
